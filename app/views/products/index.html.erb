  <!-- üîç –§–Ü–õ–¨–¢–†–ò -->
  <%= form_with url: products_path,
                method: :get,
                local: true,
                class: "row g-3 mb-4 align-items-end" do %>

    <!-- –ü–æ—à—É–∫ –∑–∞ –Ω–∞–∑–≤–æ—é -->
    <div class="col-md-6">
      <%= label_tag :q, "–ü–æ—à—É–∫ –∑–∞ –Ω–∞–∑–≤–æ—é", class: "form-label" %>
      <%= text_field_tag :q,
            params[:q],
            placeholder: "–í–≤–µ–¥—ñ—Ç—å –Ω–∞–∑–≤—É —Ç–æ–≤–∞—Ä—É",
            class: "form-control" %>
    </div>

    <!-- –°–æ—Ä—Ç—É–≤–∞–Ω–Ω—è –∑–∞ —Ü—ñ–Ω–æ—é -->
    <div class="col-md-4">
      <%= label_tag :price, "–°–æ—Ä—Ç—É–≤–∞–Ω–Ω—è –∑–∞ —Ü—ñ–Ω–æ—é", class: "form-label" %>
      <%= select_tag :price,
            options_for_select(
              [
                ["–ó–∞ –∑—Ä–æ—Å—Ç–∞–Ω–Ω—è–º —Ü—ñ–Ω–∏", "asc"],
                ["–ó–∞ —Å–ø–∞–¥–∞–Ω–Ω—è–º —Ü—ñ–Ω–∏", "desc"]
              ],
              params[:price]
            ),
            class: "form-select" %>
    </div>

    <!-- –ö–Ω–æ–ø–∫–∞ -->
    <div class="col-md-2">
      <%= submit_tag "–§—ñ–ª—å—Ç—Ä—É–≤–∞—Ç–∏",
            class: "btn btn-primary w-100" %>
    </div>

  <% end %>

  <% if @products.any? %>
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">

            <!-- –§–æ—Ç–æ -->
            <% if product.images.attached? %>
              <%= image_tag product.images.first.variant(
                    resize_to_fill: [400, 300]
                  ),
                  class: "card-img-top",
                  alt: product.name %>
            <% else %>
              <div class="d-flex align-items-center justify-content-center bg-light"
                   style="height: 300px;">
                <span class="text-muted">–ù–µ–º–∞—î —Ñ–æ—Ç–æ</span>
