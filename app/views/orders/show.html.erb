<div class="container mt-5">
  <h2>✅ Замовлення №<%= @order.id %></h2>

  <p><strong>Доставка:</strong> <%= @order.delivery_method.humanize %></p>
  <p><strong>Оплата:</strong> <%= @order.payment_method.humanize %></p>

  <h4 class="mt-4">Товари</h4>
  <ul class="list-group mb-3">
    <% @order.order_items.each do |item| %>
      <li class="list-group-item d-flex justify-content-between">
        <span><%= item.product.name %> × <%= item.quantity %></span>
        <span><%= number_to_currency(item.price * item.quantity, unit: "₴") %></span>
      </li>
    <% end %>
  </ul>

  <h4>Разом: <%= number_to_currency(@order.total, unit: "₴") %></h4>

  <%= link_to "До каталогу", products_path, class: "btn btn-secondary mt-3" %>
</div>
