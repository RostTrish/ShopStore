<div class="container mt-5">
  <h2 class="mb-4">✉ Зворотній звʼязок</h2>

  <%= form_with model: @feedback, local: true do |f| %>

    <% if @feedback.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @feedback.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :message, "Ваше повідомлення" %>
      <%= f.text_area :message,
            rows: 5,
            class: "form-control",
            placeholder: "Ваші побажання, питання або пропозиції…" %>
    </div>

    <%= f.submit "Надіслати", class: "btn btn-primary" %>
  <% end %>
</div>
